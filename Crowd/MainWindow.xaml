<Window x:Class="Crowd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="292" VerticalAlignment="Top" Width="517" Background="White" Margin="0,27,0,0" MouseDown="canvas_MouseDown"/>
        <TextBox x:Name="WTB" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="23" Margin="5,0,0,0"/>
        <Label Content="X" Margin="28,0,0,0" Width="20" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="HTB" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="23" Margin="45,0,0,0"/>
        <Button x:Name="createBtn" Content="Create" HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Top" Width="50" Height="23" Background="White" BorderBrush="#FF357FFF" Foreground="#FF020202" Click="createBtn_Click"/>
    </Grid>
</Window>
